@model IEnumerable<cricZee.Models.SunRisesHyderabad>

@{
    ViewData["Title"] = "Index";
}
<head>
    <link href="~/css/Match.css" rel="stylesheet" />
</head>
<body>
    <h3 style="color:ghostwhite">Sun Risers Hyderabad</h3>
    <img src="~/lib/sunriseshyderabad1.jpg" />
   
    <table class="table table-dark table-striped">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Player)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.PlayerRole)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Price)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Player)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.PlayerRole)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Price)
                    </td>

                </tr>
            }
        </tbody>
    </table>
</body>