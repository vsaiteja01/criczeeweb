@model IEnumerable<cricZee.Models.TopBatsmen>

@{
    ViewData["Title"] = "Top Scorers";
}
<head>
    <link href="~/css/Match.css" rel="stylesheet" />
   
</head>

<h3 style="color:ghostwhite">Top Scorers</h3>
<img src="~/lib/batsmen.jpg" height="250" width="250">
<body>
    <table class="table table-success table-striped">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Player)
                <th>
                    @Html.DisplayNameFor(model => model.Innings)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Runs)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Player)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Innings)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Runs)
                    </td>

                </tr>
            }
        </tbody>
    </table>
</body>
