@model IEnumerable<cricZee.Models.RoyalChallengersBanglore>

@{
    ViewData["Title"] = "Index";
}

<head>
<link href="~/css/Match.css" rel="stylesheet" />

</head>
<body>
    <h3 style="color:ghostwhite">Royal Challengers Banglore</h3>

    <img src="~/lib/rcb1.jpg" />

    <table class="table table-dark table-striped">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.PlayerId)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.PlayerRole)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Price)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.PlayerId)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.PlayerRole)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Price)
                    </td>

                </tr>
            }
        </tbody>
    </table>
</body>